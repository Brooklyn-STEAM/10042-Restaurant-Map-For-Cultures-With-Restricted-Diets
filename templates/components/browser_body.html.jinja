{% if browser_publicData["current_user"]["inputs"]["has_searchFilters"] %}
    {% set toLoad_sections = ["searches", "favorites", "recommendations"] %}
{% else %}
    {% set toLoad_sections = ["favorites", "recommendations"] %}
{% endif %}

<article class="">
    {% for restoSection in toLoad_sections %}
        {% set section_data = browser_publicData[restoSection] %}

        <section>
            {# Header #}
            <header class="row">
                <h2 class="col-auto h-1">
                    {{restoSection.capitalize()}}
                </h2>
                <small class="col md-0">{{ section_data["count"] }} Results</small>
            </header>

            <section class="row g-5" style="border: 2px solid white; border-radius: 10px; background-color: rgb(225 225 225 / 0.3);">
                {# Pagination #}
                <aside class="col-1 border">
                    <nav class="BW-nav-browser-pagination">
                        <ul class="BW-ul-pagination-vertical">
                            <li class="BW-li-pagination-item BW-pagination-min">
                                <button class="BW-input-pagination-turnPage" onclick="turn_currentPagination(1, '{{ restoSection }}-turnPage-current')">
                                    <p>1</p>
                                </button>
                            </li>
                            <li class="BW-li-pagination-item BW-pagination-back">
                                <button class="BW-input-pagination-turnPage" onclick="turn_currentPagination({{ section_data['current_page'] - 1 }}, '{{ restoSection }}-turnPage-current')">
                                    <img src="/static/images/svgs/arrow_up.svg">
                                </button>
                            </li>


                            <li class="BW-li-pagination-item BW-pagination-current">
                                <input id="{{ group }}-turnPage-current" class="BW-input-pagination-turnPage" type="number" value="{{ section_data['current_page'] }}" 
                                name="pagination-{{ group }}" form="searchBar_form">
                            </li>

                            <li class="BW-li-pagination-item BW-pagination-forward">
                                <button class="BW-input-pagination-turnPage" onclick="turn_currentPagination({{ section_data['current_page'] + 1 }}, '{{ restoSection }}-turnPage-current')">
                                    <img src="/static/images/svgs/arrow_down.svg">
                                </button>
                            </li>
                            <li class="BW-li-pagination-item BW-pagination-max">
                                <button class="BW-input-pagination-turnPage" onclick="turn_currentPagination({{ section_data['max_page'] }}, '{{ restoSection }}-turnPage-current')">
                                    <p>{{ section_data['max_page'] }}</p>
                                </button>
                            </li>
                        </ul>
                    </nav>
                </aside>

                {# Card Group #}
                <section class="col-11 border">
                    <figure class="overflow-y-hidden overflow-x-scroll m-0 p-0" style="width:100%">
                        {% if section_data["results"] %}
                                <div class="text-nowrap">
                                    {% for restaurant in section_data["results"] %}
                                        {% include "components/resto_card.html.jinja"%}
                                    {% endfor %}
                                </div>
                        {% else %}


                        {% endif %}
                    </figure>
                </section>
            </section>

        </section>
    {% endfor %}
</article>