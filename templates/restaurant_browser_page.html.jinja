<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Browser</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="../static/css/style.css" rel="stylesheet">    <link href="../static/css/style.css" rel="stylesheet">
    <link href="../static/css/card.css" rel="stylesheet">

</head>
<body class="body-restaurantBrowser-page">
    <header class="header-nav-container">
        {% include "components/navbar.html.jinja" %}
        <h1>Browser</h1>
    </header>
    <main class="main-browser">
        <header class="header-browser-searchbar">
            {% with dietary_restriction_list = dietary_restriction_list, current_route = "/restaurant_browser" %}
                    {% include "components/search_bar.html.jinja" %}
            {% endwith %}
        </header>

        <hr>

        <section class="section-browser-body">
            <section class="section-browser-searchs">
                    {% if search_information %}
                        <h2>Search Results</h2>
                        <section class="section-card-group">
                            {% for restaurant in search_information %}
                                {% with restaurant = restaurant %}
                                        {% include "components/restaurant_card.html.jinja"%}
                                {% endwith %}
                            {% endfor %}
                        </section>
                        
                        <hr>
                    {% elif 
                        request.args.get('query') 
                        or 
                        request.args.get('dietary_restriction_radio') 
                        or
                        request.args.get('price_min_filter') 
                        or 
                        request.args.get('price_max_filter') 
                    %}
                        <h2>Search Results</h2>
                        <section class="section-card-group">
                            <p>No Match</p>
                        </section>
                    {% endif %}
            </section>
            
            {% if 
                request.args.get('query') 
                or 
                request.args.get('dietary_restriction_radio') 
                or
                request.args.get('price_min_filter') 
                or 
                request.args.get('price_max_filter') 
             %}
            <hr>
            {% endif %}

            <section class="section-browser-favorites">
                    <h2>Favorites</h2>       
                    {% if user_favorite_present %}
                        <section class="section-card-group">
                            {% for restaurant in restaurant_information %}
                                {% if (restaurant["user_id"] == current_user.id) %}
                                        {% with restaurant = restaurant %}
                                            {% include "components/restaurant_card.html.jinja"%}
                                        {% endwith %}
                                {% endif %}
                            {% endfor %}
                        </section>
                    {% else %}
                        <section class="section-card-group">
                            <p>You don't have any Favorites. You can add a favorite by presssing the hearts.</p>
                        </section>
                    {% endif %}                    
            </section>

            <hr>

            <section class="section-browser-recommendations">
                    <h2>Recommendations</h2>
                    <section class="section-card-group">
                        {% for restaurant in restaurant_information %}
                            {% with restaurant = restaurant %}
                                {% include "components/restaurant_card.html.jinja"%}
                            {% endwith %}
                        {% endfor %}
                    </section>
            </section>

        </section>

    </main>
    <script src="../static/javascript/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>